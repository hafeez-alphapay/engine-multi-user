<included>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.zaxxer" level="WARN" additivity="false"><appender-ref ref="STDOUT"/></logger>
    <logger name="com.mchange" level="WARN" additivity="false"><appender-ref ref="STDOUT"/></logger>
    <logger name="io.spring.platform" level="WARN" additivity="false"><appender-ref ref="STDOUT"/></logger>
    <logger name="org.springframework" level="ERROR" additivity="false"><appender-ref ref="STDOUT"/></logger>
    <logger name="org.hibernate" level="WARN" additivity="false"><appender-ref ref="STDOUT"/></logger>
    <logger name="org.apache" level="WARN" additivity="false"><appender-ref ref="STDOUT"/></logger>
    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="DEBUG" additivity="false"><appender-ref ref="STDOUT"/></logger>
    <logger name="com.zaxxer.hikari.HikariConfig" level="DEBUG" additivity="false"><appender-ref ref="STDOUT"/></logger>
    <logger name="com.alphapay.payEngine.logging.LoggingFilter" level="TRACE" additivity="false"><appender-ref ref="STDOUT"/></logger>
    <logger name="com.alphapay" level="TRACE" additivity="false"><appender-ref ref="STDOUT"/></logger>

    <root level="WARN"><appender-ref ref="STDOUT"/></root>
</included>